<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/bg"

        android:scaleType = "centerCrop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/normalmodeimg"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/normalmode" />

            <TextView
                android:id="@+id/mode_text_view"
                android:layout_marginTop="3dp"
                android:layout_marginRight="20dp"
                android:textSize="12sp"
                android:fontFamily="@font/latoregular"
                android:layout_width="wrap_content"
                android:textColor="@color/whitecolor"
                android:text="Normal Mode"
                android:layout_gravity="right"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="208dp"
                        android:layout_marginLeft="20dp"

                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/wifilayout1"
                            android:layout_width="match_parent"


                            android:layout_height="match_parent"
                            android:layout_weight="1.35"
                            android:orientation="vertical"
                            android:visibility="invisible">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="90dp"
                                android:fontFamily="@font/latoregular"
                                android:text="dbm"
                                android:textAlignment="center"
                                android:textColor="@color/white" />


                            <LinearLayout
                                android:layout_width="match_parent"


                                android:layout_height="40dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/wifidbm_strength"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:src="@drawable/nostrengthsignal" />

                                <TextView
                                    android:id="@+id/wifi_dbm_txtview"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="bottom"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/latoregular"
                                    android:gravity="bottom"
                                    android:paddingLeft="3dp"

                                    android:text="00"
                                    android:textColor="@color/white"
                                    android:textSize="18sp" />


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="181dp"

                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/strengthimg"
                                    android:layout_width="180dp"
                                    android:layout_height="180dp"
                                    android:layout_alignParentTop="false"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/wifione"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/wifi_range"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:text="00"
                                    android:textSize="60sp" />


                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/wifilayout2"
                            android:layout_width="match_parent"

                            android:layout_height="match_parent"
                            android:layout_weight="1.35"
                            android:orientation="vertical"
                            android:visibility="invisible">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="90dp"
                                android:fontFamily="@font/latoregular"
                                android:text="Asu"
                                android:textAlignment="center"

                                android:textColor="@color/white" />

                            <LinearLayout
                                android:layout_width="match_parent"


                                android:layout_height="40dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/wifiasu_strength"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:src="@drawable/nostrengthsignal" />

                                <TextView
                                    android:id="@+id/wifi_asu_txtview"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="bottom"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/latoregular"

                                    android:gravity="bottom"
                                    android:paddingLeft="3dp"

                                    android:text="00"

                                    android:textColor="@color/white"
                                    android:textSize="18sp" />


                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/WifiLevelTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/latoregular"

                    android:text="WIFI is in off condition"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/frame"

                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="58dp"
                        android:layout_height="48dp"
                        app:srcCompat="@drawable/ssid" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="7dp"
                        android:text="SSID"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="7dp"
                        android:text="BSSID"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/latoregular"

                        android:paddingLeft="7dp"
                        android:text="WIFI Speed"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="7dp"
                        android:text="WIFI Strength"
                        android:textColor="@color/white"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/WifiSSIDTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="7dp"
                        android:text=": Not available"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/WifiBssiTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/latoregular"

                        android:paddingLeft="7dp"
                        android:text=": Not available"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/WifiSpeedTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/latoregular"

                        android:paddingLeft="7dp"
                        android:text=": Not available"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/WifiStrengthTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/latoregular"

                        android:paddingLeft="7dp"
                        android:text=": Not available"
                        android:textColor="@color/white"
                        android:textSize="12dp" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/wifilayout3"

                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"

                android:background="@drawable/frame"
                android:orientation="horizontal"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="58dp"
                        android:layout_height="48dp"
                        app:srcCompat="@drawable/speed" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/latoregular"

                        android:paddingLeft="7dp"
                        android:text="IP Address"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="7dp"
                        android:text="MAC Address"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="7dp"
                        android:text="WIFI Frequency"
                        android:textColor="@color/white"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/WifiIpAddressTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="7dp"
                        android:text=": Not available"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/WifiMacAddressTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="7dp"
                        android:text=": Not available"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/WifiFrequencyTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="7dp"
                        android:text=": Not available"
                        android:textColor="@color/white"
                        android:textSize="12sp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/wifilayout4"
                android:layout_width="match_parent"

                android:layout_height="140dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/frame"
                android:orientation="horizontal"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="58dp"
                        android:layout_height="48dp"
                        android:src="@drawable/dns" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/latoregular"

                        android:paddingLeft="7dp"
                        android:text="Network ID"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="7dp"
                        android:text="DNS 1"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="7dp"
                        android:text="DNS 2"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="7dp"
                        android:text="Gateway"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="7dp"
                        android:text="Netmask"
                        android:textColor="@color/white"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/WifiNetIdTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/latoregular"

                        android:paddingLeft="7dp"
                        android:text=": Not available"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/DNS1TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="7dp"
                        android:text=": Not available"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/DNS2TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="7dp"
                        android:text=": Not available"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/GateWayTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="7dp"
                        android:text=": Not available"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/NetMaskTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="7dp"
                        android:text=": Not available"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
