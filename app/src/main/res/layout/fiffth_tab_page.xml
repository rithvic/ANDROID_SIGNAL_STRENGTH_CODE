<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/advancemode"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/normalmode" />

            <TextView
                android:id="@+id/mode_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/latoregular"
                android:text="Normal Mode"
                android:textColor="@color/whitecolor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/Internet_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/latoregular"
                android:text="No internet connection"
                android:textAlignment="center"
                android:textColor="@color/whitecolor"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:visibility="visible">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="292dp"
                    android:layout_height="180dp"
                    tools:context=".MainActivity">

                    <ImageView

                        android:id="@+id/meter"
                        android:layout_width="281dp"

                        android:layout_height="128dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/speedwifi" />


                    <ImageView

                        android:id="@+id/needle"
                        android:layout_width="186dp"
                        android:layout_height="133dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="48dp"
                        android:layout_marginTop="13dp"
                        android:foregroundGravity="bottom"
                        android:src="@drawable/needle2"
                        android:visibility="visible" />


                </RelativeLayout>
            </LinearLayout>


            <ImageView
                android:id="@+id/speed_range"
                android:layout_width="219dp"
                android:layout_height="124dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/nospeed"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/wave_img"
                android:layout_width="138dp"
                android:layout_height="154dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:src="@drawable/iconwifi"
                android:visibility="gone" />

            <TextView
                android:id="@+id/test_status_txt_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/latoregular"
                android:text="Press test speed to begin test"
                android:textAlignment="center"
                android:textColor="@color/whitecolor"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/PingTextView"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/frame"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="Ping"
                    android:textAlignment="textStart"
                    android:textColor="@color/whitecolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/PingValueTextView"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/frame"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="0 kbp/sec"
                    android:textAlignment="textStart"
                    android:textColor="@color/whitecolor"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/DownloadTextView"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/frame"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="Download"
                    android:textAlignment="textStart"
                    android:textColor="@color/whitecolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/DownloadValueTextView"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/frame"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="0 kbp/sec"
                    android:textAlignment="textStart"
                    android:textColor="@color/whitecolor"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/UploadTextView"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/frame"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="Upload"
                    android:textAlignment="textStart"
                    android:textColor="@color/whitecolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/UploadValueTextView"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/frame"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="0 kbp/sec"
                    android:textAlignment="textStart"
                    android:textColor="@color/whitecolor"
                    android:textSize="14sp" />


            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/latoregular"
                android:text="Press test speed to begin test"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/TestButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@color/buttonbackground"
                android:fontFamily="@font/latoregular"
                android:text="Test Speed"

                android:textAllCaps="false"
                android:textColor="@color/whitecolor"
                android:textSize="14sp" />


            <LinearLayout
                android:id="@+id/linear22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView

                        android:id="@+id/connected_devices_textview"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/latoregular"

                        android:text="Connected Devices : "
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/devices_loading_progressbar"
                        style="@style/AVLoadingIndicatorView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="visible"
                        app:indicatorColor="@color/white"
                        app:indicatorName="BallScaleMultipleIndicator" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="30dp"
                        android:layout_gravity="center"

                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/frame"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="WIFI Security"
                        android:textColor="@color/whitecolor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/wifi_sec_txt"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/frame"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="not available"
                        android:textColor="@color/whitecolor"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="30dp"
                        android:layout_gravity="center"

                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/frame"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="10dp"

                        android:paddingTop="5dp"
                        android:text="DNS Security"
                        android:textColor="@color/whitecolor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/dns_sec_txt"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/frame"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="not available"
                        android:textColor="@color/whitecolor"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="30dp"
                        android:layout_gravity="center"

                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/frame"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="TLS Security"
                        android:textColor="@color/whitecolor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tls_sec_txt"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/frame"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="not available"
                        android:textColor="@color/whitecolor"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="30dp"
                        android:layout_gravity="center"

                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/frame"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="ARP Security"
                        android:textColor="@color/whitecolor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/arp_sec_txt"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/frame"
                        android:fontFamily="@font/latoregular"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="not available"
                        android:textColor="@color/whitecolor"
                        android:textSize="14sp" />


                </LinearLayout>


                <Button
                    android:id="@+id/Securitycheckbutton"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:background="@color/buttonbackground"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:text="Security Check"
                    android:textAllCaps="false"
                    android:textColor="@color/whitecolor"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/latoregular"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>




</LinearLayout>