<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/splashimageview"
        android:layout_width="165dp"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        android:background="@drawable/logo"/>

    <TextView
        android:id="@+id/topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splashimageview"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/latoregular"
        android:text="MOBILYTICS"
        android:textColor="@android:color/white"
        android:textColorLink="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topic"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/latoregular"
        android:text="Tower Signal Strength at a glance"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorLink="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="33dp"
        android:fontFamily="@font/latoregular"
        android:text="@ 2017-2018 Quadrobay Technologies LLP. All Rights Reserved. www.quadrobay.com"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorLink="@color/common_google_signin_btn_text_dark_default"
        android:textSize="8sp"
        android:textStyle="bold" />

</RelativeLayout>