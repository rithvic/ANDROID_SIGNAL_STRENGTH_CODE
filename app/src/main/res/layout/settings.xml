<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/settings_details_appbar"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:overScrollMode="never"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_marginTop="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/settings_details_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/navigation_background"

            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.95"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_gravity="center"
                android:background="@drawable/bluebox"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="74dp"
                    android:layout_height="71dp"
                    android:layout_gravity="center"
                    android:clickable="false"

                    android:src="@drawable/basics" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:background="@drawable/bluebox"
                android:gravity="center">

                <ImageView
                    android:layout_width="74dp"

                    android:layout_height="71dp"
                    android:clickable="false"
                    android:src="@drawable/shield" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:background="@drawable/bluebox"
                android:gravity="center">

                <ImageView
                    android:id="@+id/se"
                    android:layout_width="74dp"

                    android:layout_height="71dp"
                    android:clickable="false"
                    android:src="@drawable/lock" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_gravity="center"
                android:background="@color/whitecolor"
                android:gravity="center"
                android:orientation="vertical">


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/latoregular"
                    android:text="Select threshhold signal level:"
                    android:textAlignment="textStart"
                    android:textColor="@color/bluecolor"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:popupBackground="@color/whitecolor"
                    android:background="@color/whitecolor" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:background="@drawable/whitebox"
                android:gravity="center"
                android:orientation="vertical">


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/latoregular"
                    android:text="Please allow requred permissions for better eexperience"
                    android:textAlignment="textStart"
                    android:textColor="@color/BlackColor"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/whitecolor"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/settings_location_service_txtview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Location service enabled:"
                        android:textAlignment="textStart"
                        android:textColor="@color/bluecolor"
                        android:textSize="12sp" />

                    <ImageView

                        android:id="@+id/setting_location_service_switch"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:src="@drawable/off" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="23dp"


                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/whitecolor"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/settings_location_access_txtview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Location access enabled:"
                        android:textAlignment="textStart"
                        android:textColor="@color/bluecolor"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/settings_location_access_switch"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:src="@drawable/off" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:background="@color/whitecolor"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/whitecolor"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hide application icon"
                        android:textAlignment="textStart"
                        android:textColor="@color/bluecolor"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/settings_hide_icon_switch"

                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:src="@drawable/off" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/latoregular"
                    android:text="Note : If you hide the application icon then it will be no longer available in application menu. If you want to view icon again then click application widget in the homescreen to enable application icon"
                    android:textColor="@color/BlackColor"
                    android:textSize="8sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>